<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_home_appbar_bg">

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FFC125"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view11"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FF82AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/view1"
        app:layout_constraintRight_toLeftOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view11"
        />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FF00FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintRight_toLeftOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view11"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#D2691E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/view3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view11"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp"/>

    <View
        android:id="@+id/view5"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="#43CD80"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view6"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="#D15FEE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view7"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="#D1EEEE"
        app:layout_constraintLeft_toRightOf="@+id/view6"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view8"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="#EE3A8C"
        app:layout_constraintLeft_toRightOf="@+id/view7"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view9"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:background="#EEEE00"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view10"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:background="#F5FFFA"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="60dp"
        android:background="#CDCDC1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</android.support.constraint.ConstraintLayout>
